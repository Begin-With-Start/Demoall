<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <demo.minifly.com.project_all_demo.rangebar.RangeBar
            android:id="@+id/rangebar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="@dimen/common_dimen_dp10"/>

        <TextView
            android:id="@+id/tv_rangebar_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_dimen_dp10"
            android:text="progress"/>

        <demo.minifly.com.project_all_demo.rangebar.RangeBar
            android:id="@+id/rangebar2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:padding="@dimen/common_dimen_dp10"
            app:textStyle="TEXT"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/common_color_c1_0971ce"
            android:textSize="27sp"
            tools:text="≤3小时"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp">

            <View
                android:id="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/common_color_c13_ececec"/>

            <Gallery
                android:layout_above="@+id/bottom_line"
                android:id="@+id/gallery"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:spacing="10dp"
                />

            <View
                android:layout_above="@+id/bottom_line"
                android:layout_width="1.5dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/common_color_c1_0971ce"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
