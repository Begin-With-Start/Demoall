<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_upload_plus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dash_border_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimen_dp20"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/common_upload_plus_shape"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_dimen_dp8"
            android:layout_gravity="center_horizontal"
            android:text="@string/upload_photo"
            android:textSize="@dimen/common_dimen_s8_dp12"
            android:textColor="@color/common_color_c7_333333"/>
    </LinearLayout>

</RelativeLayout>