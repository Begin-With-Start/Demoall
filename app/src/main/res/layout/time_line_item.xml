<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_bg"
    android:layout_width="60dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_above="@+id/tv_line"
            android:id="@+id/tv_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="@color/color_blue_or_gray"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_dimen_dp10"
            />

        <View
            android:layout_alignParentBottom="true"
            android:id="@+id/tv_line"
            android:layout_width="2dp"
            android:layout_height="14dp"
            android:layout_centerHorizontal="true"
            android:background="@color/common_color_c13_ececec"
            />
</RelativeLayout>