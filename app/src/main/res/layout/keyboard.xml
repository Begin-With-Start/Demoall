<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimen_dp10"
        android:background="@color/common_color_c14_e5e9ee" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimen_dp10"
        android:layout_below="@+id/keyboard"
        android:background="@color/common_color_c14_e5e9ee" />

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_dimen_dp190"
        android:layout_below="@+id/line"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/common_dimen_dp10"
            android:layout_height="match_parent"
            android:background="@color/common_color_c14_e5e9ee" />
        <demo.minifly.com.fuction_demo.project_all_demo.keyborad.VirtualKey
            android:id="@+id/vk_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </demo.minifly.com.fuction_demo.project_all_demo.keyborad.VirtualKey>

        <View
            android:layout_width="@dimen/common_dimen_dp10"
            android:layout_height="match_parent"
            android:background="@color/common_color_c14_e5e9ee" />

        <LinearLayout
            android:layout_width="@dimen/common_dimen_dp85"
            android:layout_height="match_parent"
            android:background="@color/common_color_c14_e5e9ee"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimen_dp90"
                android:scaleType="center"
                android:background="@drawable/keyboard_key_selector"
                android:src="@drawable/keyboard_delete" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_dimen_dp90"
                android:layout_marginTop="@dimen/common_dimen_dp10"
                android:gravity="center"
                android:text="@string/key_confirm"
                android:textColor="@color/common_color_c1_0971ce"
                android:background="@drawable/keyboard_key_selector"
                android:textSize="@dimen/common_dimen_dp20" />

        </LinearLayout>
        <View
            android:layout_width="@dimen/common_dimen_dp10"
            android:layout_height="match_parent"
            android:background="@color/common_color_c14_e5e9ee" />

    </LinearLayout>


</RelativeLayout>