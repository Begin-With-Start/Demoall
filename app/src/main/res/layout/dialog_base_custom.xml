<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_base_custom_root"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:id="@+id/dialog_base_content_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>

    <ImageView
        android:id="@+id/img_dialog_base_close"
        android:layout_width="@dimen/common_dimen_dp35"
        android:layout_height="@dimen/common_dimen_dp35"
        android:layout_marginTop="@dimen/common_dimen_dp20"
        android:src="@mipmap/icon_pop_close"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|center_horizontal"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>