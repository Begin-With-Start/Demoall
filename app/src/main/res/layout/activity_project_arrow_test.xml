<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demo.minifly.com.project_arrow_test.ProjectArrowTestActivity">

    <demo.minifly.com.project_arrow_test.ArrowLinearlayout
        android:id="@+id/arrow_arrowlinearlayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/arrow_img_1"
                    android:layout_width="@dimen/common_dimen_dp70"
                    android:layout_height="@dimen/common_dimen_dp70"
                    android:src="@drawable/arrow_1"
                    />
                <ImageView
                    android:id="@+id/arrow_img_2"
                    android:layout_marginTop="40dp"
                    android:layout_width="@dimen/common_dimen_dp70"
                    android:layout_height="@dimen/common_dimen_dp70"
                    android:src="@drawable/arrow_2"
                    />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/arrow_img_3"
                    android:layout_width="@dimen/common_dimen_dp70"
                    android:layout_height="@dimen/common_dimen_dp70"
                    android:src="@drawable/arrow_3"
                    />
                <ImageView
                    android:id="@+id/arrow_img_4"
                    android:layout_marginTop="40dp"
                    android:layout_width="@dimen/common_dimen_dp70"
                    android:layout_height="@dimen/common_dimen_dp70"
                    android:src="@drawable/arrow_4"
                    />

            </LinearLayout>

        </RelativeLayout>
    </demo.minifly.com.project_arrow_test.ArrowLinearlayout>

</android.support.constraint.ConstraintLayout>
