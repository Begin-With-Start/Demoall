<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/single_img_big_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:single_img_big_card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    single_img_big_card_view:cardBackgroundColor="@color/white"
    single_img_big_card_view:cardCornerRadius="4dp"
    single_img_big_card_view:cardElevation="2dp"
    single_img_big_card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/animation_img2" />

        <!--<TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/iv"
            android:gravity="center"
            android:text="CymChad" />-->

        <com.example.fake_hago_2.view.TextSwitchView
            android:id="@+id/switcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="CymChad" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
